{
  "template": "default",
  "settings": {
    "analysis.analyzer": {
      "default": {
        "type": "hebrew"
      },
      "keyword": {
        "analyzer": "custom",
        "tokenizer": "keyword",
        "filter": "trim"
      }
    }
  },
  "mappings": {
    "_default_": {
      "dynamic_templates": [
        {
          "simple_analyzer": {
            "match_pattern": "regex",
            "match": "^(id|preface_id|issn_number|office|keyword|body)$",
            "mapping": {
              "analyzer": "keyword"
            }
          }
        }
      ]
    }
  }
}
